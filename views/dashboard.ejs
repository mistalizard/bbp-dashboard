<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/utilities.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <main>
      <div class="dashboard">
        <section class="container">
          <% data.forEach(function(provider){ %>
          <div class="card">
            <div class="time time-good">8:00 AM</div>
            <div class="provider-name-box">
              <h2 class="provider-name"><%= provider.name %></h2>
            </div>

            <div class="card-details">
              <div class="card-detail-box">
                <span class="card-detail"><p>After Hours</p></span>
              </div>

              <div class="card-details">
                <div class="card-detail-box outage">
                  <a class="card-detail" href="">No Active Outages</a>
                </div>

                <div class="card-detail-box">
                  <a class="card-detail" href="">Links</a>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </section>
      </div>
    </main>
  </body>
</html>
